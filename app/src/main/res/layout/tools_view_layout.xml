<?xml version="1.0" encoding="utf-8"?>
<cn.smiles.autoreader.view.MyLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/tools_view_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/go_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_white_left_top_selector"
                android:contentDescription="回到桌面"
                android:padding="16dp"
                android:src="@drawable/click_home_selector"/>

            <ImageView
                android:id="@+id/recent_app"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_white_selector"
                android:contentDescription="最近运行APP"
                android:padding="16dp"
                android:src="@drawable/long_home_selector"/>

            <ImageView
                android:id="@+id/open_notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_white_selector"
                android:contentDescription="打开通知栏"
                android:padding="16dp"
                android:src="@drawable/click_notification_selector"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sys_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_white_left_bottom_selector"
                android:contentDescription="系统设置页"
                android:padding="16dp"
                android:src="@drawable/click_settings_selector"/>

            <ImageView
                android:id="@+id/screen_capture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_white_selector"
                android:contentDescription="截屏"
                android:padding="16dp"
                android:src="@drawable/click_screencapture_selector"/>

            <View
                android:id="@+id/open_app_setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_white_right_bottom_selector"
                android:contentDescription="APP设置"/>
        </LinearLayout>
    </LinearLayout>
</cn.smiles.autoreader.view.MyLinearLayout>
